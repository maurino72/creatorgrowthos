# Supabase
NEXT_PUBLIC_SUPABASE_URL=           # https://<project-ref>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=      # Supabase anon/public key
SUPABASE_SERVICE_ROLE_KEY=          # Supabase service role key (server-side only, never expose)

# Security
ENCRYPTION_KEY=                     # 32-byte hex string (64 chars) for AES-256-GCM token encryption

# Twitter OAuth 2.0
TWITTER_CLIENT_ID=                 # Twitter Developer App Client ID
TWITTER_CLIENT_SECRET=             # Twitter Developer App Client Secret

# LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=                # LinkedIn Developer App Client ID
LINKEDIN_CLIENT_SECRET=            # LinkedIn Developer App Client Secret

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OpenAI
OPENAI_API_KEY=                    # OpenAI API key for AI features (classification, insights, ideation, trending topics)

# Inngest
INNGEST_EVENT_KEY=                 # Inngest event key (from Inngest dashboard, required in production)
INNGEST_SIGNING_KEY=               # Inngest signing key (from Inngest dashboard, required in production)

# Stripe
STRIPE_SECRET_KEY=                 # Stripe secret key (sk_test_... or sk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY= # Stripe publishable key (pk_test_... or pk_live_...)
STRIPE_WEBHOOK_SECRET=             # Stripe webhook signing secret (whsec_...)
STRIPE_STARTER_MONTHLY_PRICE_ID=   # Stripe Price ID for Starter monthly ($19/mo)
STRIPE_STARTER_YEARLY_PRICE_ID=    # Stripe Price ID for Starter yearly ($190/yr)
STRIPE_BUSINESS_MONTHLY_PRICE_ID=  # Stripe Price ID for Business monthly ($49/mo)
STRIPE_BUSINESS_YEARLY_PRICE_ID=   # Stripe Price ID for Business yearly ($490/yr)
STRIPE_AGENCY_MONTHLY_PRICE_ID=    # Stripe Price ID for Agency monthly ($99/mo)
STRIPE_AGENCY_YEARLY_PRICE_ID=     # Stripe Price ID for Agency yearly ($990/yr)